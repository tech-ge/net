# Environment Variables for TechGeo Platform
# Copy this file to .env.local and fill in with your actual values

# MongoDB Atlas Connection String
# Format: mongodb+srv://username:password@cluster.mongodb.net/databasename
MONGODB_URI=mongodb+srv://your_username:your_password@cluster0.xxxxx.mongodb.net/techgeo

# Admin Authentication Key (should be long and random)
# Used for admin panel authentication
ADMIN_KEY=your-secret-admin-key-at-least-32-characters-long

# Optional: JWT Secret (for future token-based authentication)
# JWT_SECRET=your-jwt-secret-key-here

# Optional: Payment Gateway Keys (implement when integrating payments)
# STRIPE_SECRET_KEY=sk_test_xxxxx
# PAYPAL_CLIENT_ID=xxxxx
# PAYPAL_CLIENT_SECRET=xxxxx

# Node Environment
NODE_ENV=production
